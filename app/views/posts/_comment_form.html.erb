<%= form_with model: [@post, @comment], class: "mt-4" do |form| %>
    <div class="form-group">
        <% if @comment.errors.any? %>
            <div class="alert alert-danger mb-2">
            <%= @comment.errors[:text].first %>
            </div>
        <% end %>

        <div class="input-group">
            <%= form.text_field :text, id: "comment-form", class: "form-control", placeholder: "Add comment..." %>
            <button class="btn btn-outline-primary" id="post-comment-button" type="submit">
                <i class="bi bi-send-fill"></i>
            </button>
        </div>
    </div>
<% end %>