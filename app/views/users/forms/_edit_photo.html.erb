<%= form_with(model: user, url: update_path, local: true, html: { multipart: true }) do |form| %>
  <div class="mb-3">
    <%= form.label field, class: "form-label" %>
    <%= form.file_field field, accept: "image/*", class: "form-control" %>
    <% if user.errors.full_messages.any? %>
      <div class="text-danger mt-1 small">
        <%= user.errors.full_messages.first %>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-between gap-2 mt-3">
    <%= button_tag "Cancel", type: "button", class: "btn btn-secondary", onclick: 'document.getElementById("modal").innerHTML = ""' %>
    <%= form.submit "Save", class: "btn btn-primary" %> 
  </div>

<% end %>
